{
  "openapi": "3.0.3",
  "info": {
    "title": "GitHub Public Repo Reader",
    "description": "API do odczytu struktury katalogów i zawartości plików z publicznych repozytoriów GitHub.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.github.com",
      "description": "GitHub Public API"
    }
  ],
  "paths": {
    "/repos/{owner}/{repo}/contents/{path}": {
      "get": {
        "operationId": "getRepoContents",
        "summary": "Pobiera zawartość folderu lub pliku w repozytorium GitHub",
        "description": "Umożliwia pobranie struktury katalogów oraz zawartości plików z publicznego repozytorium GitHub.\nJeśli `path` wskazuje folder – zwracana jest lista plików/folderów.  \nJeśli `path` wskazuje plik – zwracany jest JSON z metadanymi i zakodowaną zawartością (base64).",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": ""
            }
          },
          {
            "name": "ref",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "example": "main"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Zawartość pliku lub lista plików/folderów",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "path": {
                            "type": "string"
                          },
                          "type": {
                            "type": "string",
                            "enum": ["file", "dir"]
                          },
                          "download_url": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "path": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": ["file"]
                        },
                        "content": {
                          "type": "string",
                          "description": "Base64 encoded content of the file"
                        },
                        "encoding": {
                          "type": "string",
                          "example": "base64"
                        },
                        "download_url": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
